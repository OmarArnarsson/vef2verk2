<%- include('header') %>

    <h1>Atvinnuumsókn</h1>
    <form method="post" action="/register">
        <div>
            <div class="form__input">
                <label for="name">Nafn</label>
                <input id="name" name="name" value="">
            </div>
            <div class="form__input">
                <label for="email">Netfang</label>
                <input type="emal" id="email" name="email" value="">
            </div>
            <div class="form__input">
                <label for="phone">Sími</label>
                <input id="phone" name="phone" value="">
            </div>
            <div class="form__input">
                <label for="intro">Kynning á þér:</label>
                <textarea id="intro" name="intro"></textarea>
            </div>
            <!-- Todo finna hvernig á að tengja labels tög við virkni-->
        </div>

        <div>
            <h2>Starf sem sótt er um:</h3>
            <div class="form__radio">
                <input class="radio" type="radio" id="starf1" name="starf" value="forritari">
                <label for="starf1">Forritari</label>
            </div>
            <div class="form__radio">
                <input class="radio" type="radio" id="starf2" name="starf" value="honnudur">
                <label for="starf2">Hönnuður</label>
            </div>
            <div class="form__radio">
                <input class="radio" type="radio" id="starf3" name="starf" value="verkefnastjori">
                <label for="starf3">Verkefnastjóri</label>
            </div>
        </div>

        <div class="form__button">
            <button type="submit">Senda umsókn</button>
        </div>
        
    </form>

<%- include('footer') %>